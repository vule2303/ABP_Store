@page "/manufacturer/{code}.html/{pageNumber:int?}"
@model Store.Public.Web.Pages.Products.ManufacturerModel;
<div class="section-box">
    <div class="breadcrumbs-div">
        <div class="container">
            <ul class="breadcrumb">
                <li><a class="font-xs color-gray-1000" href="/">Trang chủ</a></li>
                <li><a class="font-xs color-gray-500">@Model.Manufacturer.Name</a></li>
            </ul>
        </div>
    </div>
</div>
<div class="section-box shop-template mt-30">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 order-first order-lg-last">              
                <div class="box-filters mt-0 pb-5 border-bottom">
                    <div class="row">
                        <div class="col-xl-12 col-lg-9 mb-10 text-lg-end text-center">
                            <span class="font-sm color-gray-900 font-medium border-1-right span">1&ndash;16 của 17 sản phẩm</span>
                            <div class="d-inline-block">
                                <span class="font-sm color-gray-500 font-medium">Sắp xếp theo:</span>
                                <div class="dropdown dropdown-sort border-1-right">
                                    <button class="btn dropdown-toggle font-sm color-gray-900 font-medium" id="dropdownSort" type="button" data-bs-toggle="dropdown" aria-expanded="false">Sản phẩm mới nhất</button>
                                    <ul class="dropdown-menu dropdown-menu-light" aria-labelledby="dropdownSort" style="margin: 0px;">
                                        <li><a class="dropdown-item active" href="#">Sản phẩm mới nhất</a></li>
                                        <li><a class="dropdown-item" href="#">Giá từ thấp tới cao</a></li>
                                        <li><a class="dropdown-item" href="#">Giá từ cao tới thấp</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="d-inline-block">
                                <span class="font-sm color-gray-500 font-medium">Xem</span>
                                <div class="dropdown dropdown-sort border-1-right">
                                    <button class="btn dropdown-toggle font-sm color-gray-900 font-medium" id="dropdownSort2" type="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-display="static"><span>30 sản phẩm</span></button>
                                    <ul class="dropdown-menu dropdown-menu-light" aria-labelledby="dropdownSort2">
                                        <li><a class="dropdown-item active" href="#">30 sản phẩm</a></li>
                                        <li><a class="dropdown-item" href="#">50 sản phẩm</a></li>
                                        <li><a class="dropdown-item" href="#">100 sản phẩm</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="d-inline-block"><a class="view-type-grid mr-5 active" href="#"></a></div>
                        </div>
                    </div>
                </div>
                <div class="row mt-20"> 
                    @if (Model.ProductData.Results.Count < 1)
                    {
                        <section class="section-box shop-template mt-60">
                            <div class="container">
                                <div class="text-center mb-150 mt-50"> 
                                    <div class="image-404 mb-50"> <img src="/assets/imgs/page/account/404.png" alt="Ecom"></div>
                                    <h3>Hiện sản phẩm đã hết hàng</h3>                           
                                </div>
                            </div>
                        </section>
                    }
                    else
                    {
                        @foreach (var item in Model.ProductData.Results)
                        {
                            <partial name="_ProductItem1" model="item" />
                        }

                    }
                </div>
               <partial name="_Paginator" model="Model.ProductData" />
            </div>
            <div class="col-lg-3 order-last order-lg-first">
                <div class="sidebar-border mb-0">
                    <div class="sidebar-head">
                        <h6 class="color-gray-900">Danh mục sản phẩm</h6>
                    </div>
                    <div class="sidebar-content">
                        <ul class="list-nav-arrow">
                            @foreach (var item in Model.Categories)
                            {
                                 <li><a href="/products/@(item.Code).html">@item.Name<span class="number">@item.productCount</span></a></li>
                            }
                        </ul>                      
                    </div>
                </div>
                 <div class="sidebar-border mb-0">
                    <div class="sidebar-head">
                        <h6 class="color-gray-900">Thương hiệu</h6>
                    </div>
                    <div class="sidebar-content">
                        <ul class="list-nav-arrow">
                            @foreach (var item in Model.Manufacturers)
                            {
                               <li><a href="/manufacturer/@(item.Code).html">@item.Name<span class="number">@item.productCount</span></a></li>
                            }                        
                        </ul>                      
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>