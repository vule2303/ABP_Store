@page "/search/{code}/{keyword?}/{pageNumber:int?}"
@model Store.Public.Web.Pages.Products.SearchModel
@{
}
@if(Model.ProductData.Results.Count > 0 && Model.ProductData.Results != null)
{
    <div class="section-box shop-template mt-30">
    <div class="container">
    <div class="row">
        <div class="col-lg-3">
        <div class="sidebar-ads">
            <div class="bg-electronic"><span class="big-deal mb-5">Big deal</span>
            <h4 class="font-25">Electronic</h4>
            <p class="font-16 color-brand-3">Sản phẩm mới, trending!</p>
            </div>
        </div>
        </div>
        <div class="col-lg-9">
        <div class="banner-top-gray-100">
            <div class="banner-ads-top mb-30"><a href="#"><img src="/assets/imgs/page/shop/grid-2/banner.png" alt="Ecom"></a></div>
        </div>
        </div>
    </div>
        <div class="row">
        <div class="col-lg-12">   
        <div class="list-products-5 mt-20">
                    @foreach (var item in Model.ProductData.Results)
                    {
                        <div class="card-grid-style-3">
                        <div class="card-grid-inner">
                            <div class="tools"><a class="btn btn-trend btn-tooltip mb-10" href="#" aria-label="Trend" data-bs-placement="left"></a><a class="btn btn-wishlist btn-tooltip mb-10" href="shop-wishlist.html" aria-label="Add To Wishlist"></a><a class="btn btn-compare btn-tooltip mb-10" href="shop-compare.html" aria-label="Compare"></a><a class="btn btn-quickview btn-tooltip" aria-label="Quick view" href="#ModalQuickview" data-bs-toggle="modal"></a></div>
                            <div class="image-box"><span class="label bg-brand-2">-17%</span><a href="shop-single-product.html"><img src="/assets/imgs/page/homepage1/imgsp3.png" alt="Ecom"></a></div>
                            <div class="info-right"><a class="font-xs color-gray-500" href="shop-vendor-single.html">@item.ManufacturerName</a><br><a class="color-brand-3 font-sm-bold" href="shop-single-product.html">@item.Name</a>
                            <div class="rating"><img src="/assets/imgs/template/icons/star.svg" alt="Ecom"><img src="/assets/imgs/template/icons/star.svg" alt="Ecom"><img src="/assets/imgs/template/icons/star.svg" alt="Ecom"><img src="/assets/imgs/template/icons/star.svg" alt="Ecom"><img src="/assets/imgs/template/icons/star.svg" alt="Ecom"><span class="font-xs color-gray-500">(65)</span></div>
                            <div class="price-info"><strong class="font-lg-bold color-brand-3 price-main">@String.Format("{0:n0}đ", @item.SellPrice)</strong><span class="color-gray-500 price-line">$3225.6</span></div>
                            <div class="mt-20 box-btn-cart"><a class="btn btn-cart" href="shop-cart.html">Add To Cart</a></div>                         
                            </div>
                        </div>
                        </div>  
                    }

        </div>
            <partial name="_Paginator" model="Model.ProductData" />
        </div>
        </div>
    </div>
</div>
        }
        else
        {
            <section class="section-box shop-template mt-60">
                <div class="container">
                    <div class="text-center mb-150 mt-50"> 
                    <div class="image-404 mb-50"> <img src="/assets/imgs/page/account/404.png" alt="Ecom"></div>
                    <h3>Không có sản phẩm bạn tìm kiếm</h3>                           
                    </div>
                </div>
            </section>
        }

   